{
  "singleQuote": true,
  "tabWidth": 2,
  "bracketSpacing": true,
  "printWidth": 100,
  "arrowParens": "avoid",
  "jsxBracketSameLine": true,
  "insertPragma": false,
  "semi": true,
  "trailingComma": "none",
  "overrides": [
